---
import Layout from '../layouts/Layout.astro';
import WaitlistForm from '../components/WaitlistForm.astro';
---

<Layout title="BurnXLabs - AI Fitness Coaching for Beginners">
    <!-- Hero Section -->
    <section class="pt-16 pb-20 px-6">
        <div class="max-w-6xl mx-auto">
            <div class="text-center max-w-4xl mx-auto">
                <!-- Badge -->
                <div class="inline-flex items-center bg-blue-50 text-blue-700 px-3 py-1 rounded-full text-sm font-medium mb-6">
                    <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
                    Coming October 2025
                </div>

                <!-- Headline -->
                <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6 leading-tight">
                    AI fitness coaching
                    <span class="bg-gradient-to-r from-blue-600 to-pink-500 bg-clip-text text-transparent">
                        for beginners
                    </span>
                </h1>

                <!-- Description -->
                <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto leading-relaxed">
                    BurnX delivers personalized workout and nutrition guidance through AI that actually understands you're just starting out.
                </p>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="#waitlist" class="bg-gray-900 text-white px-8 py-3 rounded-lg font-medium hover:bg-gray-800 transition-colors">
                        Join the waitlist
                    </a>
                    <a href="#product" class="border border-gray-300 text-gray-700 px-8 py-3 rounded-lg font-medium hover:border-gray-400 transition-colors">
                        Learn more
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="product" class="py-20 px-6 bg-gray-50">
        <div class="max-w-6xl mx-auto">
            <!-- Section Header -->
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                    Built for complete beginners
                </h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Every feature designed to remove barriers and make fitness accessible, sustainable, and actually enjoyable.
                </p>
            </div>

            <!-- Feature Grid -->
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Feature 1 -->
                <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Smart AI Coaching</h3>
                    <p class="text-gray-600 leading-relaxed">
                        AI that learns your pace, preferences, and progress to create workouts that grow with you.
                    </p>
                </div>

                <!-- Feature 2 -->
                <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-pink-100 rounded-xl flex items-center justify-center mb-6">
                        <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Beginner-First Design</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Clear instructions, proper form guidance, and encouragement designed for day-one fitness.
                    </p>
                </div>

                <!-- Feature 3 -->
                <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mb-6">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16l-3-9m3 9l3-9"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Complete Nutrition</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Meal planning and nutrition guidance that fits your lifestyle and dietary preferences.
                    </p>
                </div>

                <!-- Feature 4 -->
                <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-6">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Progress Tracking</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Visual progress insights that motivate and help you understand your fitness journey.
                    </p>
                </div>

                <!-- Feature 5 -->
                <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-yellow-100 rounded-xl flex items-center justify-center mb-6">
                        <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Flexible Scheduling</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Workouts that adapt to your schedule, whether you have 15 minutes or an hour.
                    </p>
                </div>

                <!-- Feature 6 -->
                <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Mobile Native</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Built specifically for iOS and Android with offline capabilities and seamless syncing.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- App Preview Section -->
    <section class="py-20 px-6">
        <div class="max-w-6xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
                <!-- Content -->
                <div>
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
                        Your AI coach understands you're a beginner
                    </h2>
                    <p class="text-lg text-gray-600 mb-8 leading-relaxed">
                        Unlike generic fitness apps, BurnX is built from the ground up for people who are just starting their fitness journey. Every interaction is designed to build confidence, not intimidate.
                    </p>
                    
                    <div class="space-y-6">
                        <div class="flex items-start space-x-4">
                            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 mb-1">Personalized workout plans</h3>
                                <p class="text-gray-600">Generated based on your fitness level, goals, and available equipment.</p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4">
                            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 mb-1">Real-time form feedback</h3>
                                <p class="text-gray-600">AI analyzes your movement to ensure proper form and prevent injury.</p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4">
                            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 mb-1">Adaptive progression</h3>
                                <p class="text-gray-600">Automatically adjusts difficulty as you get stronger and more confident.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Phone Mockup -->
                <div class="text-center lg:text-right">
                    <div class="inline-block relative">
                        <div class="w-80 h-96 bg-gray-900 rounded-3xl shadow-2xl relative overflow-hidden">
                            <!-- Phone Screen -->
                            <div class="absolute top-4 left-4 right-4 bottom-4 bg-white rounded-2xl overflow-hidden">
                                <!-- Status Bar -->
                                <div class="h-8 bg-gray-50 flex items-center justify-between px-4 text-xs">
                                    <span class="font-medium">9:41</span>
                                    <div class="flex items-center space-x-1">
                                        <div class="w-4 h-2 bg-green-500 rounded-sm"></div>
                                    </div>
                                </div>
                                
                                <!-- App Content -->
                                <div class="p-4 space-y-4">
                                    <div class="text-center">
                                        <h3 class="font-bold text-lg text-gray-900">Today's Workout</h3>
                                        <p class="text-sm text-gray-600">Beginner Full Body â€¢ 25 min</p>
                                    </div>
                                    
                                    <div class="bg-blue-50 rounded-xl p-4">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center">
                                                <span class="text-white font-bold">1</span>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-900">Push-ups</h4>
                                                <p class="text-sm text-gray-600">8-12 reps</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="bg-gray-50 rounded-xl p-4">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-12 h-12 bg-gray-300 rounded-xl flex items-center justify-center">
                                                <span class="text-gray-600 font-bold">2</span>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-900">Squats</h4>
                                                <p class="text-sm text-gray-600">12-15 reps</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="bg-gray-50 rounded-xl p-4">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-12 h-12 bg-gray-300 rounded-xl flex items-center justify-center">
                                                <span class="text-gray-600 font-bold">3</span>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-900">Plank</h4>
                                                <p class="text-sm text-gray-600">30-45 seconds</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Phone Frame Elements -->
                            <div class="absolute top-2 left-1/2 transform -translate-x-1/2 w-16 h-1 bg-gray-700 rounded-full"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Social Proof -->
    <section class="py-20 px-6 bg-gray-50">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                Join the waitlist
            </h2>
            <p class="text-lg text-gray-600 mb-12">
                Be among the first to experience AI fitness coaching designed for beginners.
            </p>

            <!-- Stats -->
            <div class="grid md:grid-cols-3 gap-8 mb-16">
                <div>
                    <div class="text-3xl font-bold text-gray-900 mb-2">500+</div>
                    <div class="text-gray-600">People waiting</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-gray-900 mb-2">Oct 2025</div>
                    <div class="text-gray-600">Launch date</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-gray-900 mb-2">iOS & Android</div>
                    <div class="text-gray-600">Both platforms</div>
                </div>
            </div>

            <!-- Waitlist Form -->
            <WaitlistForm />
        </div>
    </section>
</Layout>

<script>
    // Smooth scrolling for anchor links with better positioning
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            const target = document.querySelector(targetId);
            if (target) {
                // Special handling for waitlist form to ensure it's fully visible
                if (targetId === '#waitlist') {
                    // Get the form's position and viewport height
                    const rect = target.getBoundingClientRect();
                    const absoluteTop = window.pageYOffset + rect.top;
                    
                    // Scroll with offset to center the form better in viewport
                    // Subtract 100px to add some breathing room at the top
                    window.scrollTo({
                        top: absoluteTop - 100,
                        behavior: 'smooth'
                    });
                } else {
                    // Default behavior for other anchors
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            }
        });
    });
</script>