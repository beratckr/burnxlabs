---
import Layout from '../../layouts/Layout.astro';
import { useTranslations, getLangFromUrl } from '../../i18n/utils';
import { languages } from '../../i18n/config';

export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({
        params: { lang }
    }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('faq.pageTitle')}>
    <!-- Hero Section -->
    <section class="pt-16 pb-20 px-6 bg-gradient-to-b from-gray-50 to-white">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                {t('faq.title')}
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed">
                {t('faq.subtitle')}
            </p>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 px-6">
        <div class="max-w-3xl mx-auto">
            <div class="space-y-6">
                <!-- Question 1 -->
                <div class="bg-white rounded-xl p-6 shadow-sm">
                    <h3 class="font-semibold text-gray-900 mb-3 text-lg">
                        {t('faq.q1.question')}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {t('faq.q1.answer')}
                    </p>
                </div>

                <!-- Question 2 -->
                <div class="bg-white rounded-xl p-6 shadow-sm">
                    <h3 class="font-semibold text-gray-900 mb-3 text-lg">
                        {t('faq.q2.question')}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {t('faq.q2.answer')}
                    </p>
                </div>

                <!-- Question 3 -->
                <div class="bg-white rounded-xl p-6 shadow-sm">
                    <h3 class="font-semibold text-gray-900 mb-3 text-lg">
                        {t('faq.q3.question')}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {t('faq.q3.answer')}
                    </p>
                </div>

                <!-- Question 4 -->
                <div class="bg-white rounded-xl p-6 shadow-sm">
                    <h3 class="font-semibold text-gray-900 mb-3 text-lg">
                        {t('faq.q4.question')}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {t('faq.q4.answer')}
                    </p>
                </div>

                <!-- Question 5 -->
                <div class="bg-white rounded-xl p-6 shadow-sm">
                    <h3 class="font-semibold text-gray-900 mb-3 text-lg">
                        {t('faq.q5.question')}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {t('faq.q5.answer')}
                    </p>
                </div>

                <!-- Question 6 -->
                <div class="bg-white rounded-xl p-6 shadow-sm">
                    <h3 class="font-semibold text-gray-900 mb-3 text-lg">
                        {t('faq.q6.question')}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {t('faq.q6.answer')}
                    </p>
                </div>
            </div>

            <!-- CTA Section -->
            <div class="mt-16 text-center bg-gradient-to-r from-blue-600 to-pink-500 rounded-2xl p-8">
                <h2 class="text-2xl font-bold text-white mb-4">
                    {t('faq.stillHaveQuestions')}
                </h2>
                <p class="text-white/90 mb-6">
                    {lang === 'tr' ? 
                        'Cevabını bulamadığınız bir sorunuz mu var? Bizimle iletişime geçmekten çekinmeyin.' :
                        'Can\'t find the answer you\'re looking for? Feel free to reach out to us.'}
                </p>
                <a href={`/${lang}/contact`} class="inline-block bg-white text-gray-900 px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    {t('faq.contactUs')}
                </a>
            </div>
        </div>
    </section>
</Layout>