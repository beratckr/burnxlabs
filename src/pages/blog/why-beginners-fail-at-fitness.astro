    title: 'Why 80% of Beginners Quit Fitness Apps (And How We\'re Different)',
    author: 'Sarah Chen',
    date: 'December 15, 2024',
    category: 'Fitness',
    readTime: '5 min read'
};
---

<Layout title={`${postData.title} - BurnXLabs Blog`}>
    <!-- Article Header -->
    <article class="pt-16 pb-20 px-6">
        <div class="max-w-4xl mx-auto">
            <!-- Meta -->
            <div class="flex items-center space-x-4 mb-6 text-sm text-gray-600">
                <span class="font-medium text-blue-600">{postData.category}</span>
                <span>•</span>
                <span>{postData.date}</span>
