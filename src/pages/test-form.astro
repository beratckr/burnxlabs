---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Test Form">
    <section class="py-20 px-6">
        <div class="max-w-md mx-auto">
            <h1 class="text-2xl font-bold mb-6">Direct Netlify Form Test</h1>
            
            <!-- Pure HTML form with no JavaScript -->
            <form 
                name="test-direct-submission"
                method="POST"
                data-netlify="true"
                action="/success"
                class="space-y-4"
            >
                <input type="hidden" name="form-name" value="test-direct-submission" />
                
                <div>
                    <label for="test-email" class="block text-sm font-medium text-gray-700 mb-1">
                        Email
                    </label>
                    <input
                        type="email"
                        id="test-email"
                        name="email"
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg"
                    />
                </div>
                
                <div>
                    <label for="test-name" class="block text-sm font-medium text-gray-700 mb-1">
                        Name
                    </label>
                    <input
                        type="text"
                        id="test-name"
                        name="name"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg"
                    />
                </div>
                
                <button
                    type="submit"
                    class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700"
                >
                    Submit Test Form (No JS)
                </button>
            </form>
            
            <div class="mt-8 p-4 bg-yellow-50 rounded-lg">
                <p class="text-sm text-gray-700">
                    This form submits directly to Netlify without any JavaScript interference.
                    After submission, you'll be redirected to /success.
                </p>
            </div>
        </div>
    </section>
</Layout>